<%= form_for @offer, :html => { :class => "form-horizontal offer" } do |f| %>

  <% if @offer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@offer.errors.count, "error") %> prohibited this offer from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @offer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :advertiser, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :advertiser, :class => 'form-control' %>
    </div>
    <%=f.error_span(:advertiser) %>
  </div>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:url) %>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :starts_at, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :starts_at, :class => 'form-control' %>
    </div>
    <%=f.error_span(:starts_at) %>
  </div>
  <div class="form-group">
    <%= f.label :ends_at, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ends_at, :class => 'form-control' %>
    </div>
    <%=f.error_span(:ends_at) %>
  </div>
  <div class="form-group">
    <%= f.label :premium, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :premium, :class => 'form-control' %>
    </div>
    <%=f.error_span(:premium) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                offers_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>


<div class="container">
  <div class="card-deck text-center">
    <% @offers.each do |offer| %>
    <div class="card mb-6 shadow-sm">
      <div class="card-header">.
        <span class="badge badge-danger" style="float: right"><%= offer.decorate.premium_offer %></span>
        <h4 class="font-weight-normal"><%= offer.advertiser_name.capitalize %></h4>
      </div>
      <div class="card-body">
        <h1 class="card-title pricing-card-title">
          <%= link_to t('offer.shop_now'), offer.url, target: "_blank", :class => 'btn btn-lg btn-block btn-success' %>
        </h1>
        <ul class="list-unstyled mt-3 mb-4">
          <li><%= offer.description %></li>
        </ul>

      </div>
      <div class="card-footer bg-transparent border-danger">
        <p class="card-text"> Termina em: <%= offer.ends_at %> </p>
      </div>

    </div>
    <% end %>

  </div>